<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Inventory - {% block title %}Home{% endblock %}</title>
        <link href="/vendor/bootstrap.min.css" rel="stylesheet">
        <link href="/vendor/select2.min.css" rel="stylesheet">
        <link href="/inventory.css" rel="stylesheet">
        <script src="/vendor/jquery.min.js" type="text/javascript"></script>
        <script src="/vendor/select2.min.js" type="text/javascript"></script>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col col-2 sidebar bg-secondary">
                    <h3><a class="text-dark" href="/inventory">Inventory</a></h3>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/inventory/add">Add Item</a>
                        </li>
                    </ul>
                </div>
                <div class="col">
                    <main role="main">
                        <h1>{{ block('title') }}</h1>
                        {% block body %}{% endblock %}
                    </main>
                </div>
            </div>
        </div>

        {% block javascripts %}{% endblock %}
    </body>
</html>
